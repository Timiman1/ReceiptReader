{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "ReceiptReader.API.Controllers": "Information",
      "ReceiptReader.Application": "Information",
      "ReceiptReader.Infrastructure": "Debug"
    }
  },
  "AllowedHosts": "*",
  "FileSettings": {
    "MaxFileSizeInBytes": 10485760, // 10 MB (10 * 1024 * 1024)
    "AllowedExtensions": [
      ".pdf",
      ".jpg",
      ".jpeg",
      ".png",
      ".webp",
      ".bmp",
      ".tif",
      ".tiff",
      ".heic",
      ".heif"
    ],
    "AllowedMimeTypes": [
      "application/pdf",
      "image/jpeg",
      "image/png",
      "image/bmp",
      "image/webp",
      "image/tiff"
    ]
  },
  "ReceiptDataExtraction": {
    "MinRequiredExtractionConfidence": 0.75,
    "DefaultCurrencyIfNotFound": "SEK"
  },
  "RawTextExtractionProviders": {
    "Tesseract": {
      "Language": "swe+eng"
    },
    "AzureAIDocumentIntelligence": {
      "Endpoint": "https://receiptanalyzerservicett01.cognitiveservices.azure.com",
      "ApiKey": "", // Added to user secrets instead of here
      "ModelId": "prebuilt-layout"
    }
  },
  "ConnectionStrings": {
    "ReceiptDatabase": "Data Source=ReceiptReader.Infrastructure/Data/receipts.db"
  }
}
